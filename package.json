{
  "name": "axion-stack",
  "version": "1.0.4",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "dev": "kill -9 $(lsof -ti:3000,3001) 2>/dev/null || true && turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\" --ignore-path .prettierignore",
    "check-types": "turbo run check-types",
    "start": "turbo run start",
    "start:prod": "turbo run start:prod",
    "api:start": "cd apps/api && bun run start",
    "api:start:prod": "cd apps/api && bun run start:prod",
    "api:build": "cd apps/api && bun run build",
    "auth-service:start": "cd apps/auth-service && bun run start",
    "auth-service:start:prod": "cd apps/auth-service && bun run start:prod",
    "auth-service:build": "cd apps/auth-service && bun run build",
    "user-service:start": "cd apps/user-service && bun run start",
    "user-service:start:prod": "cd apps/user-service && bun run start:prod",
    "user-service:build": "cd apps/user-service && bun run build",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "db:up": "docker compose up postgres -d",
    "db:down": "docker compose stop postgres",
    "db:generate": "turbo run db:generate",
    "db:push": "turbo run db:push",
    "db:migrate": "turbo run db:migrate",
    "db:seed": "turbo run db:seed",
    "db:studio": "turbo run db:studio",
    "db:setup": "turbo run db:setup",
    "db:reset": "docker compose down postgres && docker volume rm postgres_data || true && docker compose up postgres -d && bun db:setup",
    "release": "semantic-release",
    "release:dry": "semantic-release --dry-run"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.0.3",
    "@semantic-release/npm": "^12.0.1",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "eslint": "^9.32.0",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-sonarjs": "^3.0.4",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "semantic-release": "^24.0.0",
    "turbo": "^2.5.5",
    "typescript": "5.8.3",
    "typescript-eslint": "^8.38.0"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.18",
  "workspaces": [
    "apps/*",
    "apps/**/*",
    "apps/_services/*",
    "apps/_services/**/*",
    "packages/*",
    "packages/**/*"
  ],
  "dependencies": {
    "@heroui/card": "^2.2.23",
    "@heroui/chip": "^2.2.20",
    "@heroui/divider": "^2.2.17",
    "@heroui/progress": "^2.2.20",
    "@heroui/slider": "^2.4.21",
    "@heroui/tooltip": "^2.2.21",
    "@nestjs/axios": "^4.0.1",
    "prisma-fns": "^1.1.5",
    "use-sound": "^5.0.0"
  }
}
