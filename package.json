{
  "name": "something",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "dev": "kill -9 $(lsof -ti:3000,3001) 2>/dev/null || true && turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "start": "turbo run start",
    "start:prod": "turbo run start:prod",
    "api:start": "cd apps/api && bun run start",
    "api:start:prod": "cd apps/api && bun run start:prod",
    "api:build": "cd apps/api && bun run build",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "db:up": "docker compose up postgres -d",
    "db:down": "docker compose stop postgres",
    "db:generate": "turbo run db:generate",
    "db:push": "turbo run db:push",
    "db:migrate": "turbo run db:migrate",
    "db:seed": "turbo run db:seed",
    "db:studio": "turbo run db:studio",
    "db:setup": "turbo run db:setup",
    "db:reset": "docker compose down postgres && docker volume rm postgres_data || true && docker compose up postgres -d && bun db:setup"
  },
  "devDependencies": {
    "eslint": "^9.32.0",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-sonarjs": "^3.0.4",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "5.8.3",
    "typescript-eslint": "^8.38.0"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.18",
  "workspaces": [
    "apps/*",
    "apps/**/*",
    "packages/*",
    "packages/**/*"
  ]
}
