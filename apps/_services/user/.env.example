# Environment Configuration
NODE_ENV=development
PORT=3003

# Database Configuration
DATABASE_URL="postgresql://postgres:password@localhost:5432/nestjs_api"

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=password
REDIS_DB=0
REDIS_KEY_PREFIX=axion:
REDIS_TTL=3600

# JWT Configuration (needed for validation but user-service doesn't use JWT directly)
JWT_ACCESS_SECRET=your-super-secret-access-token-key-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key-min-32-chars
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Security Configuration
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# RabbitMQ Configuration
RABBITMQ_URL=amqp://admin:password@localhost:5672/
RABBITMQ_EXCHANGE_NAME=axion.events
RABBITMQ_QUEUE_PREFIX=axion
RABBITMQ_RETRY_ATTEMPTS=3
RABBITMQ_RETRY_DELAY=1000
