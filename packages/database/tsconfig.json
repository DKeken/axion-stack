{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "noEmitOnError": false,
    "types": ["bun-types"],
    "allowJs": true
  },
  "include": ["src/**/*", "build.ts"],
  "exclude": ["node_modules", "dist", "prisma/migrations", "generated"]
}
