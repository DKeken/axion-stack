{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": true,

    // Строгие настройки TypeScript (смягчены для сгенерированного кода)
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "useUnknownInCatchVariables": true,

    // Качество кода (смягчено для Prisma сгенерированных файлов)
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    // Настройки для сгенерированного кода (согласованы с базовыми)
    "noUncheckedIndexedAccess": false,
    "exactOptionalPropertyTypes": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,

    // Компиляция
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "noEmitOnError": false,
    "types": ["bun-types"],
    "allowJs": true
  },
  "include": ["src/**/*", "build.ts"],
  "exclude": ["node_modules", "dist", "prisma/migrations", "generated"]
}
