{
  "name": "@repo/database",
  "version": "1.0.0",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "scripts": {
    "dev": "echo '@repo/database dev mode (no-op)'",
    "db:build": "bun run build.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:reset": "prisma migrate reset",
    "db:seed": "bun run seed.ts",
    "db:setup": "prisma generate && prisma db push",
    "db:studio": "prisma studio",
    "db:validate": "prisma validate",
    "zod:generate": "prisma generate --generator zod",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "check-types": "tsc --noEmit --project tsconfig.json"
  },
  "dependencies": {
    "@prisma/client": "^6.7.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.8.1",
    "bun-plugin-dtsx": "^0.9.5",
    "dotenv": "^16.4.5",
    "prisma": "^6.7.0",
    "typescript": "^5.8.3",
    "zod-prisma-types": "^3.1.8"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./generated/zod": {
      "types": "./src/generated/zod/index.ts",
      "default": "./dist/generated/zod/index.js"
    },
    "./generated/zod/*": {
      "types": "./src/generated/zod/*.ts",
      "default": "./dist/generated/zod/*.js"
    }
  }
}
