{
  "name": "@repo/eslint-config",
  "version": "1.0.0",
  "private": true,
  "description": "Universal ESLint and Prettier configuration for TypeScript monorepo projects",
  "type": "module",
  "main": "index.js",
  "files": [
    "*.js",
    "*.d.ts",
    "configs/",
    "README.md"
  ],
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "check-types": "tsc --noEmit --project tsconfig.json"
  },
  "dependencies": {
    "@eslint/js": "^9.32.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.2.2",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-sonarjs": "^2.0.4",
    "globals": "^15.15.0",
    "typescript-eslint": "^8.38.0"
  },
  "peerDependencies": {
    "eslint": "^9.32.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.10.6",
    "typescript": "^5.7.3"
  },
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "default": "./index.js"
    },
    "./base": {
      "types": "./base.d.ts",
      "default": "./configs/base.js"
    },
    "./nestjs": {
      "types": "./nestjs.d.ts",
      "default": "./configs/nestjs.js"
    },
    "./react": {
      "types": "./react.d.ts",
      "default": "./configs/react.js"
    },
    "./prettier": {
      "types": "./prettier.d.ts",
      "default": "./configs/prettier.js"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
